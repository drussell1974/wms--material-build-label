    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Mattress Build",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceRoot}/.venv/mattress_build/bin/python3",
            "program": "${workspaceFolder}/src/mattress_build/Mattress_Builds.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}